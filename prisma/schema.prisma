// Prisma Schema File
// Saiba mais: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  type        TransactionType
  amount      Decimal  // Usar Decimal para evitar problemas com precisÃ£o em valores financeiros
  description String
  moeda       CurrencyType
  createdAt   DateTime @default(now())
}

// ðŸ”¹ Enum para garantir que 'type' tenha apenas valores vÃ¡lidos
enum TransactionType {
  ENTRADA
  SAIDA
}

// ðŸ”¹ Enum para garantir que 'moeda' tenha apenas moedas suportadas
enum CurrencyType {
  USD
  AOA
  EUR
}
