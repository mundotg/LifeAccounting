// Prisma Schema File
// Saiba mais: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  sessions     Session[]
  transactions Transaction[]
  createdAt    DateTime      @default(now())
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
}

model Transaction {
  id          Int             @id @default(autoincrement())
  type        TransactionType
  amount      Decimal // Usar Decimal para evitar problemas com precisÃ£o em valores financeiros
  description String
  moeda       CurrencyType
  userId      Int?
  user        User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime        @default(now())

  @@index([userId, createdAt])
}

// ðŸ”¹ Enum para garantir que 'type' tenha apenas valores vÃ¡lidos
enum TransactionType {
  ENTRADA
  SAIDA
}

// ðŸ”¹ Enum para garantir que 'moeda' tenha apenas moedas suportadas
enum CurrencyType {
  USD
  AOA
  EUR
}
